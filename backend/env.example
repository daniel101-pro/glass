# Environment Configuration Example
# Copy this file to .env and fill in your values

NODE_ENV=development
PORT=4000

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/glass?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-32-chars-long
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=10

# CORS (Optional - leave empty for development)
CORS_ORIGIN=https://your-frontend-domain.com

